<Window x:Class="RadioPlayer.WebRadio.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RadioPlayer.WebRadio.Converters"
        Title="Web Radio Player" Height="680" Width="900">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- STYLE ZA STANICE -->
        <Style x:Key="StationItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3498db"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ecf0f1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#f8f9fa">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR - LISTA STANICA -->
        <Border Grid.Column="0" Background="#2c3e50" BorderBrush="#34495e" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Row 0: Header sa TabControl -->
                    <RowDefinition Height="Auto"/>

                    <!-- Row 1: Lista stanica -->
                    <RowDefinition Height="*"/>

                    <!-- Row 2: Footer -->
                    <RowDefinition Height="Auto"/>
                    
                </Grid.RowDefinitions>

                
                <!-- HEADER SIDEBAR - TAB CONTROL -->
                <Border Grid.Row="0" Background="#34495e" Padding="10">
                    <TabControl x:Name="StationsTabControl" 
                        Background="Transparent" 
                        BorderThickness="0"
                        SelectionChanged="StationsTabControl_SelectionChanged">

                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter ContentSource="Header"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <!-- ALL STATIONS TAB -->
                        <TabItem x:Name="AllStationsTab">
                            <TabItem.Header >
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="📻" Foreground="GreenYellow" Margin="0,0,5,0"/>
                                    <TextBlock Text="All Stations" Foreground="White" FontSize="12"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <!-- FAVORITES TAB -->
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⭐" Foreground="Yellow" Margin="0,0,5,0"/>
                                    <TextBlock Text="Favorites" Foreground="White" FontSize="12"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                    </TabControl>
                </Border>

                <!-- LISTA STANICA (vidljiva za All Stations i Favorites) -->
                <ListBox Grid.Row="1" 
                        x:Name="StationsListBox"
                        ItemsSource="{Binding Stations}"
                        ItemContainerStyle="{StaticResource StationItemStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        VirtualizingPanel.IsVirtualizing="False"
                        SelectionChanged="StationsListBox_SelectionChanged">
                    
                    <ListBox.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Add New Station" Click="AddStationMenuItem_Click"/>
                            <MenuItem Header="Remove Station" Click="RemoveStationMenuItem_Click"/>
                            <Separator/>
                            <MenuItem Header="Toggle Favorite" Click="ToggleFavoriteMenuItem_Click"/>
                        </ContextMenu>
                    </ListBox.ContextMenu>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>


                                <!-- HEART TextBloxk -->
                                <TextBlock Grid.Column="0"
                                        Text="{Binding IsFavorite, Converter={x:Static local:FavoriteToHeartConverter.Instance}}"
                                        FontSize="22"
                                        VerticalAlignment="Center"
                                        Margin="5,0,10,0"
                                        Cursor="Hand"
                                        MouseDown="HeartTextBlock_MouseDown"
                                        Tag="{Binding}"
                                        ToolTip="Click to toggle favorite">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="#bdc3c7"/>
                                            <!-- Default boja -->
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsFavorite}" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <!-- Favorite boja -->
                                                </DataTrigger>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#3498db"/>
                                                    <!-- Hover boja -->
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>

                                <!-- STATION INFO -->
                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" 
                                        Foreground="White" 
                                        FontWeight="SemiBold"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock 
                                        Foreground="#bdc3c7" 
                                        FontSize="10"
                                        TextTrimming="CharacterEllipsis">
                                            <Run Text="{Binding Genre}"/>
                                            <Run Text="," Foreground="#95a5a6"/>
                                            <Run Text="{Binding Country}"/>
                                    </TextBlock>
                                </StackPanel>

                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- STATION COUNT -->
                <Border Grid.Row="2" Background="#34495e" Padding="10,5">
                    <TextBlock x:Name="StationCountText"
                              Text="0 stations" 
                              Foreground="#bdc3c7" 
                              FontSize="11"
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#3498db" Padding="20,15">
                <TextBlock Text="🎵 Radio Player - Modern" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>

            <!-- MAIN CONTENT -->
            <StackPanel Grid.Row="1" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="30">

                <!-- CURRENT STATION INFO -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="25" 
                       Margin="10"
                       BorderBrush="#e0e0e0" 
                       BorderThickness="1"
                       Width="400">
                    <StackPanel>
                        <TextBlock Text="Now Playing:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#7f8c8d"
                                  Margin="0,0,0,8"/>

                        <TextBlock x:Name="CurrentStationText" 
                                  Text="Select a station from the list" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="#2c3e50"
                                  TextWrapping="Wrap"/>

                        <TextBlock x:Name="CurrentStationInfo" 
                                  Text="" 
                                  FontSize="12"
                                  Foreground="#95a5a6"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- STATUS -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="10"
                       BorderBrush="#e0e0e0" 
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Status:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#7f8c8d"/>
                        <TextBlock x:Name="StatusText" 
                                  Text="Ready to play..." 
                                  FontSize="13" 
                                  Margin="0,5,0,0"
                                  Foreground="#2c3e50"/>
                    </StackPanel>
                </Border>

                <!-- ZAMENI POSTOJEĆI BUFFER PROGRESS SA VU METER STILOM -->
                <Border Background="White" 
        CornerRadius="10" 
        Padding="15" 
        Margin="10"
        BorderBrush="#e0e0e0" 
        BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="📊 BUFFER METER" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>

                        <!-- Buffer Progress -->
                        <Border Background="#f5f5f5" BorderBrush="#ddd" BorderThickness="1" CornerRadius="3" Margin="5" Padding="2">
                            <Grid Width="300" Height="20">
                                <Rectangle Fill="#f0f0f0" RadiusX="2" RadiusY="2"/>

                                <StackPanel Orientation="Horizontal" Height="16">
                                    <!-- ZELENI (0-60%) -->
                                    <Rectangle x:Name="BufferMeterGreen" Fill="#4CAF50" Width="0"/>

                                    <!-- ŽUTI (61-80%) -->
                                    <Rectangle x:Name="BufferMeterYellow" Fill="#FFC107" Width="0" />

                                    <!-- CRVENI (81-100%) -->
                                    <Rectangle x:Name="BufferMeterRed" Fill="#F44336" Width="0" />
                                </StackPanel>

                                <!-- Buffer percentage text -->
                                <!--<TextBlock x:Name="BufferMeterText" Text="0%" 
                                    HorizontalAlignment="Center" VerticalAlignment="Center"
                                    FontSize="9" FontWeight="Bold" Foreground="#333"/>-->
                            </Grid>
                        </Border>

                        <!-- Buffer status text -->
                        <TextBlock x:Name="BufferStatusText" Text="Buffer: 0%" FontSize="10" 
                  HorizontalAlignment="Center" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- CONTROLS -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Button x:Name="PlayButton" 
                           Content="▶️ Play" 
                           Background="#27ae60" 
                           Foreground="White"
                           Click="PlayButton_Click"
                           FontWeight="SemiBold"
                           Padding="20,10"/>

                    <Button x:Name="StopButton" 
                           Content="⏹️ Stop" 
                           Background="#e74c3c" 
                           Foreground="White"
                           Click="StopButton_Click"
                           FontWeight="SemiBold"
                           Padding="20,10"
                           IsEnabled="False"/>
                </StackPanel>


                <!-- VOLUME CONTROL -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="10"
                        BorderBrush="#e0e0e0" 
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🔈" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="VolumeSlider" 
                            Width="150" 
                            Minimum="0" 
                            Maximum="1" 
                            Value="0.5"
                            TickFrequency="0.1"
                            IsSnapToTickEnabled="True"
                            ValueChanged="VolumeSlider_ValueChanged"/>
                        <TextBlock Text="🔊" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock x:Name="VolumeText" 
                            Text="50%" 
                            Width="40"
                            FontSize="12" 
                            VerticalAlignment="Center"
                            Margin="10,0,0,0"/>
                        
                    </StackPanel>                    
                </Border>

                
                
            </StackPanel>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#ecf0f1" Padding="12">
                <TextBlock Text="🎶 Powered by RadioStream.Core • Select a station and press Play!" 
                          Foreground="#7f8c8d" 
                          HorizontalAlignment="Center"
                          FontSize="11"/>
            </Border>
        </Grid>
    </Grid>
</Window>