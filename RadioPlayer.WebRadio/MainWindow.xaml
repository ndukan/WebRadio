<Window x:Class="RadioPlayer.WebRadio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RadioPlayer.WebRadio.Converters"
        Title="Web Radio Player" Height="680" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="4"/>
        </Style>

        <!-- STYLE ZA STANICE -->
        <Style x:Key="StationItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,6"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3498db"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#ecf0f1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#f8f9fa">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- SIDEBAR - LISTA STANICA -->
        <Border Grid.Column="0" Background="#2c3e50" BorderBrush="#34495e" BorderThickness="0,0,1,0">
            <Grid>
                <Grid.RowDefinitions>
                    <!-- Row 0: Header sa TabControl -->
                    <RowDefinition Height="Auto"/>

                    <!-- Row 1: SEARCH/FILTER (NOVO) --><!--
                    <RowDefinition Height="Auto"/>-->
                    
                    <!-- Row 1: Lista stanica -->
                    <RowDefinition Height="*"/>

                    <!-- Row 2: Footer -->
                    <RowDefinition Height="Auto"/>
                    
                </Grid.RowDefinitions>


                
                <!-- HEADER SIDEBAR - TAB CONTROL -->
                <Border Grid.Row="0" Background="#34495e" Padding="10">
                    <TabControl x:Name="StationsTabControl" 
                        Background="Transparent" 
                        BorderThickness="0">

                        <TabControl.Resources>
                            <Style TargetType="TabItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="TabItem">
                                            <Border Background="Transparent" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter ContentSource="Header"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TabControl.Resources>

                        <!-- ALL STATIONS TAB -->
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="📻" Margin="0,0,5,0"/>
                                    <TextBlock Text="All Stations" Foreground="White" FontSize="12"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                        <!-- FAVORITES TAB -->
                        <TabItem>
                            <TabItem.Header>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="⭐" Margin="0,0,5,0"/>
                                    <TextBlock Text="Favorites" Foreground="White" FontSize="12"/>
                                </StackPanel>
                            </TabItem.Header>
                        </TabItem>

                    </TabControl>
                </Border>





                <!-- LISTA STANICA (vidljiva za All Stations i Favorites) -->
                <ListBox Grid.Row="1" 
                        x:Name="StationsListBox"
                        ItemsSource="{Binding Stations}"
                        ItemContainerStyle="{StaticResource StationItemStyle}"
                        Background="Transparent"
                        BorderThickness="0"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        VirtualizingPanel.IsVirtualizing="False">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- STATION INFO -->
                                <StackPanel Grid.Column="0" Orientation="Vertical">
                                    <TextBlock Text="{Binding Name}" 
                                        Foreground="White" 
                                        FontWeight="SemiBold"
                                        TextTrimming="CharacterEllipsis"/>
                                    <TextBlock Text="{Binding Genre}" 
                                        Foreground="#bdc3c7" 
                                        FontSize="10"
                                        TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                                <!-- COUNTRY -->
                                <TextBlock Grid.Column="1" 
                                        Text="{Binding Country}" 
                                        Foreground="#95a5a6"
                                        FontSize="10"
                                        VerticalAlignment="Center"
                                        Margin="10,0,5,0"/>

                                <!-- HEART BUTTON -->
                                <TextBlock Grid.Column="2"
                                        Text="{Binding IsFavorite, Converter={x:Static local:FavoriteToHeartConverter.Instance}}"
                                        FontSize="22"
                                        VerticalAlignment="Center"
                                        Margin="5,0,0,0"
                                        Cursor="Hand"
                                        MouseDown="HeartTextBlock_MouseDown"
                                        Tag="{Binding}"
                                        ToolTip="Click to toggle favorite">
                                    <TextBlock.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </TextBlock.RenderTransform>
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="#3498db"/>
                                                    <Setter Property="FontSize" Value="16"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>



                 <!--SEARCH/FILTER PANEL - STALNO VIDLJIV 
                <Border Grid.Row="1" Background="#2c3e50" Padding="10" BorderBrush="#34495e" BorderThickness="0,0,0,1">
                    <StackPanel>
                         SEARCH BOX 
                        <Border Background="#34495e" CornerRadius="6" Padding="8" Margin="0,0,0,8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="SearchTextBox" 
                                        Grid.Column="0"
                                        BorderThickness="0"
                                        FontSize="11"
                                        Padding="6,4"
                                        VerticalContentAlignment="Center"
                                        Background="Transparent"
                                        Foreground="White"
                                        CaretBrush="White"
                                        SelectionBrush="#3498db">
                                    <TextBox.Style>
                                        <Style TargetType="TextBox">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsFocused" Value="True">
                                                    <Setter Property="Background" Value="#3a506b"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBlock Grid.Column="1" 
                                           Text="🔍" 
                                           FontSize="12"
                                           Cursor="Hand"
                                           VerticalAlignment="Center"
                                           Margin="5,0,0,0"
                                           MouseUp="TextBlock_MouseUp"
                                           ToolTip="Pretraži u All Stations">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Foreground" Value="Red"/>
                                                    <Setter Property="RenderTransform">
                                                        <Setter.Value>
                                                            <ScaleTransform ScaleX="0.5" ScaleY="0.5"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                    <TextBlock.RenderTransform>
                                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                            </Grid>
                        </Border>

                        --><!-- FILTERS --><!--
                        <StackPanel Orientation="Horizontal">
                            --><!-- GENRE FILTER --><!--
                            <ComboBox x:Name="GenreFilterComboBox"
                             Width="110"
                             Height="24"
                             FontSize="10"
                             Background="#34495e"
                             Foreground="Black"
                             BorderThickness="0"
                             Padding="4,0"
                             SelectionChanged="GenreFilterComboBox_SelectionChanged">
                                --><!--<ComboBoxItem Content="All Genres" Tag="ALL" IsSelected="True"/>--><!--
                            </ComboBox>

                            --><!-- COUNTRY FILTER --><!--
                            <ComboBox x:Name="CountryFilterComboBox"
                             Width="90"
                             Height="24"
                             FontSize="10"
                             Background="#34495e"
                             Foreground="Black"
                             BorderThickness="0"
                             Padding="4,0"
                             Margin="5,0,0,0"
                             SelectionChanged="CountryFilterComboBox_SelectionChanged">
                                --><!--<ComboBoxItem Content="All Countries" Tag="ALL" IsSelected="True"/>--><!--
                            </ComboBox>

                            --><!-- CLEAR FILTERS BUTTON --><!--
                            <Button x:Name="ClearFiltersButton"
                            Content="❌"
                            Width="24"
                            Height="24"
                            FontSize="10"
                            Background="Transparent"
                            BorderThickness="0"
                            Margin="5,0,0,0"
                            Click="ClearFiltersButton_Click"
                            ToolTip="Clear all filters"
                            Visibility="Collapsed"/>
                        </StackPanel>
                    </StackPanel>
                </Border>-->




                <!-- STATION COUNT -->
                <Border Grid.Row="2" Background="#34495e" Padding="10,5">
                    <TextBlock x:Name="StationCountText"
                              Text="0 stations" 
                              Foreground="#bdc3c7" 
                              FontSize="11"
                              HorizontalAlignment="Center"/>
                </Border>
            </Grid>
        </Border>

        <!-- MAIN CONTENT -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- HEADER -->
            <Border Grid.Row="0" Background="#3498db" Padding="20,15">
                <TextBlock Text="🎵 Radio Player - Modern" 
                          Foreground="White" 
                          FontSize="20" 
                          FontWeight="Bold"
                          HorizontalAlignment="Center"/>
            </Border>

            <!-- MAIN CONTENT -->
            <StackPanel Grid.Row="1" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"
                       Margin="30">

                <!-- CURRENT STATION INFO -->
                <Border Background="White" 
                       CornerRadius="12" 
                       Padding="25" 
                       Margin="10"
                       BorderBrush="#e0e0e0" 
                       BorderThickness="1"
                       Width="400">
                    <StackPanel>
                        <TextBlock Text="Now Playing:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#7f8c8d"
                                  Margin="0,0,0,8"/>

                        <TextBlock x:Name="CurrentStationText" 
                                  Text="Select a station from the list" 
                                  FontSize="18" 
                                  FontWeight="Bold"
                                  Foreground="#2c3e50"
                                  TextWrapping="Wrap"/>

                        <TextBlock x:Name="CurrentStationInfo" 
                                  Text="" 
                                  FontSize="12"
                                  Foreground="#95a5a6"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

                <!-- STATUS -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="10"
                       BorderBrush="#e0e0e0" 
                       BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Status:" 
                                  FontWeight="Bold" 
                                  FontSize="14"
                                  Foreground="#7f8c8d"/>
                        <TextBlock x:Name="StatusText" 
                                  Text="Ready to play..." 
                                  FontSize="13" 
                                  Margin="0,5,0,0"
                                  Foreground="#2c3e50"/>
                    </StackPanel>
                </Border>

                <!-- BUFFER PROGRESS -->
                <Border Background="White" 
                       CornerRadius="10" 
                       Padding="20" 
                       Margin="10"
                       BorderBrush="#e0e0e0" 
                       BorderThickness="1">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                      Text="Buffer Level:" 
                                      FontWeight="Bold" 
                                      FontSize="14"
                                      Foreground="#7f8c8d"/>

                            <TextBlock Grid.Column="1"
                                      x:Name="BufferText" 
                                      Text="0%" 
                                      FontSize="12"
                                      Foreground="#95a5a6"/>
                        </Grid>

                        <ProgressBar x:Name="BufferProgress" 
                                    Height="16" 
                                    Width="350" 
                                    Margin="0,8,0,0"
                                    Minimum="0" 
                                    Maximum="100"
                                    Background="#ecf0f1"
                                    BorderThickness="0">
                            <ProgressBar.Foreground>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#2ecc71" Offset="0"/>
                                    <GradientStop Color="#f39c12" Offset="0.7"/>
                                    <GradientStop Color="#e74c3c" Offset="1"/>
                                </LinearGradientBrush>
                            </ProgressBar.Foreground>
                        </ProgressBar>
                    </StackPanel>
                </Border>

                <!-- CONTROLS -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center" 
                           Margin="0,20,0,0">
                    <Button x:Name="PlayButton" 
                           Content="▶️ Play" 
                           Background="#27ae60" 
                           Foreground="White"
                           Click="PlayButton_Click"
                           FontWeight="SemiBold"
                           Padding="20,10"/>

                    <Button x:Name="StopButton" 
                           Content="⏹️ Stop" 
                           Background="#e74c3c" 
                           Foreground="White"
                           Click="StopButton_Click"
                           FontWeight="SemiBold"
                           Padding="20,10"
                           IsEnabled="False"/>
                </StackPanel>


                <!-- VOLUME CONTROL -->
                <Border Background="White" 
                        CornerRadius="10" 
                        Padding="20" 
                        Margin="10"
                        BorderBrush="#e0e0e0" 
                        BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="🔈" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <Slider x:Name="VolumeSlider" 
               Width="150" 
               Minimum="0" 
               Maximum="1" 
               Value="0.5"
               TickFrequency="0.1"
               IsSnapToTickEnabled="True"
               ValueChanged="VolumeSlider_ValueChanged"/>
                        <TextBlock Text="🔊" FontSize="16" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBlock x:Name="VolumeText" 
                  Text="50%" 
                  Width="40"
                  FontSize="12" 
                  VerticalAlignment="Center"
                  Margin="10,0,0,0"/>
                    </StackPanel>
                </Border>

            </StackPanel>

            <!-- FOOTER -->
            <Border Grid.Row="2" Background="#ecf0f1" Padding="12">
                <TextBlock Text="🎶 Powered by RadioStream.Core • Select a station and press Play!" 
                          Foreground="#7f8c8d" 
                          HorizontalAlignment="Center"
                          FontSize="11"/>
            </Border>
        </Grid>
    </Grid>
</Window>